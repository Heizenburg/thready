<% provide(:title, @post.user.email) %>
<div class="main">
  <div class="container">
    <div class="row">
      <%= form_for(@post) do |f|  %>
        <div class="col-xs-8 col-md-10">
            <%= f.text_field :comment, :placeholder => "Share your thoughts" %>
        </div>
        <div class="col-xs-4 col-md-2">
            <%= f.submit :post, :class => "btn" %>
        </div>
      <% end %>
    </div>
    <ul class="comments" id="comments">
      <% @posts.each do |post| %>
        <li><%= post.comment %><pre><%= "#{post.user.email}  #{time_ago_in_words post.created_at} ago" %></pre></li>
      <% end %>
    </ul>
  </div>
</div>